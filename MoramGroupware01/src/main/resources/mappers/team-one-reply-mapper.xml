<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC 	"-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd"
>

<mapper namespace ="TeamoneReplyMapper">
	<select id="numOfReplies" resultType="Integer">
		select count(*)from Moram_Team_One_Comment
	</select>
	
	<select id="numOfRepliesByBno" resultType="Integer">
		select count(*)from Moram_Team_One_Comment where bno = #{bno}
	</select>
	
	<insert id="insert">
	insert into Moram_Team_One_Comment(bno,rtext,replier)
	values(#{bno},#{rtext},#{replier})
	</insert>
	
	<select id="select" resultType="project.spring.groupware.board.domain.ReplyVO">
		select*from Moram_Team_One_Comment
		where bno = #{bno}
		order by rno desc
	</select>
	
	<update id="update">
	update Moram_Team_One_Comment
	set rtext = #{rtext}, regdate = sysdate
	where rno = #{rno}
	</update>
	
	<delete id="delete">
	delete from Moram_Team_One_Comment where rno = #{rno}
	</delete>
	
	<delete id="deleteByBno">
	delete from Moram_Team_One_Comment where bno = #{bno}	
	</delete>
	
	<select id="selectName" resultType="project.spring.groupware.board.domain.ReplyAddNameVO">
		select a.rno, a.bno, a.rtext, b.name, b.profileimage, a.replier, a.regdate 
  		from moram_team_one_comment a left outer join moram_member b
		on replier = b.name 
		where bno = #{bno}
		order by regdate ASC
	</select>	
	
	
</mapper>